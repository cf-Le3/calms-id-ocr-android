<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtNameLabel"
                style="@style/ResultLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txtNameLabel" />

            <TextView
                android:id="@+id/txtNameContent"
                style="@style/ResultContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txtPlaceholder" />

            <View
                android:id="@+id/divider1"
                style="@style/CustomDivider"
                android:layout_width="match_parent"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/txtDocIDLabel"
                style="@style/ResultLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txtDocIDLabel" />

            <TextView
                android:id="@+id/txtDocIDContent"
                style="@style/ResultContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txtPlaceholder" />

            <View
                android:id="@+id/divider2"
                style="@style/CustomDivider"
                android:layout_width="match_parent"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/txtPhotoLabel"
                style="@style/ResultLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txtPhotoLabel" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txtPhotoContent"
                    style="@style/ResultContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txtPlaceholder" />

                <ImageView
                    android:id="@+id/imagePhotoContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter" />
            </FrameLayout>

            <View
                android:id="@+id/divider3"
                style="@style/CustomDivider"
                android:layout_width="match_parent"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/txtResultLabel"
                style="@style/ResultLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txtResultLabel" />

            <TextView
                android:id="@+id/txtResultContent"
                style="@style/ResultContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txtPlaceholder" />

            <View
                android:id="@+id/divider4"
                style="@style/CustomDivider"
                android:layout_width="match_parent"
                android:background="?android:attr/listDivider" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>